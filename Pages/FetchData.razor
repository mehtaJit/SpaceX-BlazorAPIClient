@page "/fetchdata"
@inject HttpClient Http
@using Dtos

<PageTitle>Weather forecast</PageTitle>

<h1>SpaceX Launches</h1>

<p>This is launch data for SpaceX is pulled from REST API</p>

@if (launches == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Is Tentative</th>
                <th>Launch Date Local</th>
                <th>Mission Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var launch in launches)
            {
                <tr>
                    <td>@launch.Id</td>
                    <td>@launch.IsTentative</td>
                    <td>@launch.LaunchDateLocal</td>
                    <td>@launch.MissionName</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private LaunchDto[]? launches;

    protected override async Task OnInitializedAsync()
    {
        launches = await Http.GetFromJsonAsync<LaunchDto[]>("/rest/launches");
    }
}
